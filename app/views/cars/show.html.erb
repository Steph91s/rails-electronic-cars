
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @car.photo.key %>')"></div>


<div class="main-container">

  <div class="car-details">

    <div id='car-brand'>
      <h2><i class="fas fa-car"></i>  <%= @car.brand %> <%= @car.model %> </h2>
    </div>
    <div id='car-descrip'>
      <%= @car.description %>
    </div>
    <div id='car-categ'>
      <h5><%= @car.category %></h5>
    </div>
    <div id="car-location">
      <h5><i class="fas fa-map-marker-alt"></i> <%= @car.location %> </h5>
    </div>
    <div id='car-seats'>
      <h4><i class="fas fa-chair"></i>  <%= @car.number_of_seat %> seats</h4>
    </div>
    <div id='car-price'>
      <h4><i class="fas fa-euro-sign"></i>  <%= @car.price_per_day %>/per day</h4>
    </div>

  </div>



  <div class="booking-request">

    <h1>Booking:</h1>
    <%# <%= form_tag bookings_path, method: :post, class: 'form-inline' do %>
      <%# <%= date_field 'cars[check_in_date]', nil, class: "form-control datepicker text-center date-input", placeholder: "Starting Line" %>
      <%#= date_field 'cars[check_out_date]', nil, class: "form-control datepicker text-center date-input", placeholder: "Finish Line" %>
      <%#= select_tag 'cars[number_of_guest]', options_for_select([['1'], ['2'], ['3'], ['4']]), class: "form-control text-center unselected", id: 'guest', prompt: "Guests" %>
      <%#= submit_tag "Book", class: "btn btn-info search" %>
    <%# end %>

    <%= simple_form_for [@car, @booking] do |f| %>
      <%= f.input :check_in_date, as: :date, label: "Starting Date" %>
      <%= f.input :check_out_date, as: :date, label: "Finishing Date" %>
      <%= f.input :number_of_guest, collection: 1..4, label: "Guests" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<%= link_to 'Back to cars', cars_path, class: "btn btn-success buttOn" %>
